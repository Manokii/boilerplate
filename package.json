{
  "name": "server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "client:dev": "vite",
    "server:dev": "nodemon src/server",
    "server:build": "esbuild ./src/server.ts --minify --bundle --format=cjs --outfile=dist/server.cjs --platform=node",
    "client:build": "vite build",
    "build": "npm run server:build && npm run client:build",
    "serve": "vite preview",
    "prepare": "husky install",
    "test": "prettier --check . && eslint . && stylelint \"**/*.css\"",
    "start": "node dist/server.cjs",
    "lint": "prettier -w ."
  },
  "dependencies": {
    "dotenv": "16.0.3",
    "express": "^4.18.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "@babel/preset-react": "7.18.6",
    "@swc/cli": "0.1.57",
    "@swc/core": "1.3.21",
    "@types/express": "^4.17.14",
    "@types/node": "18.11.10",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "2.1.0",
    "concurrently": "7.6.0",
    "esbuild": "0.15.18",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "nodemon": "2.0.20",
    "prettier": "2.8.0",
    "rimraf": "3.0.2",
    "stylelint": "14.16.0",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-standard": "29.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.6.4",
    "vite": "3.1.0",
    "vite-plugin-eslint": "1.8.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
